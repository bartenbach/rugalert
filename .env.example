# Airtable Configuration
AIRTABLE_API_KEY=pat_xxxxxxxxxxxxxxxxxxxxx
AIRTABLE_BASE_ID=appxxxxxxxxxxxxx

# Airtable Table Names (use these defaults unless you renamed them)
AIRTABLE_TB_VALIDATORS=validators
AIRTABLE_TB_SNAPSHOTS=snapshots
AIRTABLE_TB_EVENTS=events
AIRTABLE_TB_SUBSCRIBERS=subscribers

# Solana RPC (use a reliable RPC like Helius, QuickNode, or your own)
RPC_URL=https://api.mainnet-beta.solana.com

# Security - generate a long random string for cron authentication
CRON_SECRET=your_long_random_secret_here_min_32_chars

# Your deployed URL (update after deploying to Vercel)
BASE_URL=https://rugdetector.pumpkinspool.com

# Email Alerts (Optional - uses Resend.com for sending)
# Sign up at https://resend.com to get an API key
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
ALERTS_FROM=alerts@rugdetector.pumpkinspool.com

# Discord Notifications (Optional - for RUG alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
